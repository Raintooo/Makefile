
TARGET := hello.out
OBJS := func.o main.o const.o
CC := gcc

$(TARGET) : $(OBJS)
	$(CC) -o $@ $^
	
	@echo "$(MAKE)"
	@echo "$(MAKECMDGOALS) "
	@echo "$(MAKEFILE_LIST)"

$(OBJS) : %.o : %.c
	$(CC) -o $@ -c $<
	
	
.PHONY : rebuild clean test

rebuild : clean all test

all : $(TARGET)

clean : 
	$(RM) *.o $(TARGET)


